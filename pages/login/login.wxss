/* pages/login/login.wxss */
page {
  padding: 0 20px;
  box-sizing: border-box;
  background-color: #000;
  color: #fff;
}

.logo {
  width: 100%;
  height: 127px;
  padding: 30px 0 10px;
  box-sizing: border-box;
  text-align: center;
}

.logo image {
  width: 48px;
  height: 48px;
}

.loginForm input {
  width: 100%;
  height: 50px;
  font-size: 17px;
  border-bottom: 1px solid #fff;
  box-sizing: border-box;
}

.loginBtn {
  width: 100%;
  height: 45px;
  background-color: #ff6700;
  text-align: center;
  margin-top: 30px;
  line-height: 45px;
  font-weight: 600;
  font-size: 17px;
  border-radius: 30px;
}

.register {
  width: 100%;
  text-align: center;
  margin-top: 5px;
}