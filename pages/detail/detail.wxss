/* pages/detail.wxss */
page {
  padding-bottom: 50px;
}

.banner {
  position: relative;
}

.banner .backBtn {
  position: absolute;
  top: 10px;
  left: 10px;
  width: 42px;
  height: 42px;
  z-index: 100;
}

.banner .showIndex {
  position: absolute;
  right: 20px;
  bottom: 10px;
  background-color: rgba(0, 0, 0, .5);
  color: #fff;
  padding: 5px 7px;
  border-radius: 12px;
}

.banner swiper {
  width: 100%;
  height: 415px;
}

.banner .bannerItem {
  width: 100%;
  height: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
}

.info {
  width: 100%;
  /* height: 280px; */
  background-color: #fff;
  padding: 15px;
  box-sizing: border-box;
}

.price {
  display: flex;
  align-items: baseline;
}

.nowPrice {
  color: #ff6700;
  font-size: 25px;
  margin-right: 5px;
}

.lastPrice {
  text-decoration: line-through;
  font-size: 13px;
}

.name {
  line-height: 25px;
  font-size: 16px;
  font-weight: 700;
  margin: 8px 0;
}

.content {
  font-size: 13px;

}

.contentTop {
  margin: 6px auto;
}

.contentInner {
  margin: 6px auto;
}

.innerItem {
  width: 100%;
  margin-bottom: 3px;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: nowrap;
}

.footer {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: space-between;
  bottom: 0;
  width: 100%;
  height: 50px;
  box-sizing: border-box;
  background-color: hsla(0, 0%, 100%, .96);
  border: 1px solid rgba(0, 0, 0, .1);
  padding: 0 20px;
}

.car {
  width: 36px;
  height: 46px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.car text {
  font-size: 12px;
}

.car image {
  width: 22px;
  height: 22px;
}

.joinBtn {
  width: 85%;
  height: 38px;
  background-color: #ff6700;
  color: #fff;
  text-align: center;
  line-height: 38px;
  border-radius: 10px;
}