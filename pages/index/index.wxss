/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.header {
  width: 100%;
  height: 45px;
  display: flex;
  align-items: center;
  padding-right: 20px;
  box-sizing: border-box;
  box-shadow: 0 2px 4px -1px rgba(0, 0, 0, .2);
}

.header .logo {
  width: 25px;
  height: 16px;
  margin: 0 10px;
}

.logo image {
  width: 100%;
  height: 100%;
}

.header .search {
  flex: 1;
}

.search input {
  background-color: #fff;
  padding: 5px 10px;
}

.banner {
  width: 100%;
  height: 150px;
}

.banner image {
  width: 100%;
  height: 100%;
}

.tabs {
  width: 100%;
  height: 160px;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.tabs .tab-item {
  width: 20%;
  height: 50%;
}
.tab-item image {
  width: 100%;
  height: 100%;
}